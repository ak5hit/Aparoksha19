<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:padding="6dp"
            android:background="@drawable/gradient_day_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/dayTV"
                tools:text="Day 1"
                android:textSize="40sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/descriptionTV"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:textColor="@android:color/white"
                tools:text="This is description. This briefs about the competition."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/venueTV"
                    tools:text="CC3"
                    android:drawableStart="@drawable/ic_location_black_24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/timeTV"
                    tools:text="21/Dec/2017"
                    android:drawableStart="@drawable/ic_clock_black_24dp"
                    android:layout_gravity="end"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
